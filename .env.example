# Book Recommendation Engine Environment Configuration
# Copy this file to .env and update the values as needed

# Application Settings
APP_NAME=Book Recommendation Engine
APP_VERSION=1.0.0
DEBUG=false
ENVIRONMENT=production

# Server Configuration
API_HOST=0.0.0.0
API_PORT=8000
FRONTEND_HOST=0.0.0.0
FRONTEND_PORT=5001

# Database Configuration
DATABASE_URL=sqlite:///./data/books.db
# For PostgreSQL (uncomment and configure for production):
# DATABASE_URL=postgresql://bookuser:password@postgres:5432/bookdb

# Security Settings
SECRET_KEY=your-secret-key-here-change-this-in-production
JWT_SECRET_KEY=your-jwt-secret-key-here-change-this-in-production
JWT_ACCESS_TOKEN_EXPIRES=3600

# CORS Settings
CORS_ORIGINS=http://localhost:5001,http://127.0.0.1:5001
CORS_ALLOW_CREDENTIALS=true

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=10

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=/app/logs/app.log
LOG_MAX_SIZE=10MB
LOG_BACKUP_COUNT=5

# External API Keys (if needed for book data)
GOOGLE_BOOKS_API_KEY=your-google-books-api-key
OPEN_LIBRARY_API_KEY=your-open-library-api-key

# AWS Configuration (for EC2 deployment)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key

# PostgreSQL Configuration (for production)
POSTGRES_DB=bookdb
POSTGRES_USER=bookuser
POSTGRES_PASSWORD=your-secure-password-here

# Redis Configuration (for caching)
REDIS_URL=redis://redis:6379/0
REDIS_PASSWORD=your-redis-password

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
FROM_EMAIL=noreply@yourdomain.com

# SSL/TLS Configuration
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# Monitoring and Analytics
SENTRY_DSN=your-sentry-dsn-here
GOOGLE_ANALYTICS_ID=your-ga-id-here

# File Upload Settings
MAX_UPLOAD_SIZE=10MB
UPLOAD_FOLDER=/app/uploads

# Cache Settings
CACHE_TYPE=simple
CACHE_DEFAULT_TIMEOUT=300

# Session Configuration
SESSION_COOKIE_SECURE=true
SESSION_COOKIE_HTTPONLY=true
SESSION_COOKIE_SAMESITE=Lax

# Feature Flags
ENABLE_REGISTRATION=true
ENABLE_SOCIAL_LOGIN=false
ENABLE_EMAIL_VERIFICATION=false
ENABLE_RECOMMENDATIONS=true

# Performance Settings
WORKERS=4
WORKER_CONNECTIONS=1000
KEEPALIVE_TIMEOUT=65
MAX_REQUESTS=1000
MAX_REQUESTS_JITTER=100

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=your-backup-bucket